{
  "manifest_version": 3,
  "name": "Remove Back",
  "description": "Remove background from selected image",
  "version": "1.3.0",
  
  "background": {
    "service_worker": "./src/background.js"
  },

  "permissions": [
    "contextMenus",
    "identity", 
    "identity.email",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://*/*"
  ],

  "icons": {
      "16": "icons/back-16.png",
      "64": "icons/back-64.png",
      "128": "icons/back-128.png"
  },

  "action": {
    "default_title": "Click to show all processed images"
  }
}